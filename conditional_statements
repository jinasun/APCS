        "\n"
      ],
      "metadata": {
        "id": "vSf3pJOFRVGk"
      }
    },
    {
      "cell_type": "code",
      "source": [
        "weight = float(input(\"Please enter the weight of your package (in kg): \"))\n",
        "\n",
        "onekg = 5\n",
        "onetofive = 10\n",
        "abovefive = 20\n",
        "\n",
        "if weight <= 1:\n",
        "    cost = onekg\n",
        "elif weight <= 5:\n",
        "    cost = onetofive\n",
        "else:\n",
        "    cost = abovefive\n",
        "\n",
        "print(\"The shipping cost for your\" ,weight,\"kg package is $\",cost)\n"
      ],
