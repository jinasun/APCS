        "\n",
        "senior = input(\"Are you a senior citizen? yes/no: \").lower()\n",
        "\n",
        "if stu == \"yes\" or senior == \"yes\":\n",
        "    print(\"You are eligible for a discount!\")\n",
        "else:\n",
        "    print(\"You are not eligible for a discount.\")\n"
      ],
