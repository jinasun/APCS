      ],
      "metadata": {
        "id": "QABbfxrVRNfo"
      }
    },
    {
      "cell_type": "code",
      "source": [
        "age = int(input(\"Please enter your age: \"))\n",
        "\n",
        "child = 5\n",
        "teen = 7\n",
        "adult = 10\n",
        "senior = 6\n",
        "\n",
        "if age < 12:\n",
        "    ticket_price = child\n",
        "elif age >= 12 and age <= 17:\n",
        "    ticket_price = teen\n",
        "elif age >= 18 and age <= 59:\n",
        "    ticket_price = adult\n",
        "else:\n",
        "    ticket_price = senior\n",
        "\n",
        "print(\"The cost of your movie ticket is $\",ticket_price)\n"
      ],
